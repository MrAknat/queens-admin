{
  "name": "queens-admin",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack --port 8080",
    "build": "next build --turbopack",
    "start": "next start --port 8080",
    "prepare": "husky install",
    "lint": "biome check",
    "lint:fix": "biome check --fix",
    "format": "biome format --write",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next out dist",
    "preview": "npm run build && npm run start"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-react": "^0.545.0",
    "next": "15.5.4",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@tailwindcss/postcss": "^4.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "husky": "^8.0.0",
    "lint-staged": "^16.2.4",
    "tailwindcss": "^4.0.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx,json,css,scss}": [
      "npm run format",
      "npm run lint:fix",
      "git add"
    ]
  }
}
